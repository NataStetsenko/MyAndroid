<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="calc_btn">
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="calc_btn_func" parent="calc_btn">
        <item name="android:background">@drawable/calc_btn_func</item>
    </style>
    <style name="calc_btn_digit" parent="calc_btn">
        <item name="android:background">@drawable/calc_btn_digit</item>
    </style>
    <style name="calc_btn_equal" parent="calc_btn">
        <item name="android:background">@drawable/calc_btn_equal</item>
    </style>
    <style name="game_title">

        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/game_title_foreground</item>
    </style>
    <style name="game_title_el" parent="game_title">
        <item name="android:background">@drawable/game_title_el</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="game_score_best">
        <item name="android:background">@drawable/game_score_best</item>
    </style>


    <style name="game_score" parent="game_title">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="game_score2" parent="game_title">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="game_btn" parent="game_title">
        <item name="android:background">@drawable/game_btn</item>
        <item name="android:textSize">9sp</item>
        <item name="android:layout_marginTop">7dp</item>
    </style>
    <style name="tv_game">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="backgroundTint">@null</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>








    <style name="game_tv_0" parent="tv_game">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/game_tv_0</item>
        <item name="android:textColor">@color/tv_0</item>
    </style>
    <style name="game_tv_2" parent="game_tv_0">
        <item name="android:textColor">@color/table_background</item>
        <item name="android:background">@drawable/game_tv_2</item>
    </style>
    <style name="game_tv_4" parent="game_tv_0">
        <item name="android:textColor">@color/table_background</item>
        <item name="android:background">@drawable/game_tv_4</item>
    </style>
    <style name="game_tv_8" parent="game_tv_0">
        <item name="android:textColor">@color/num_color</item>
        <item name="android:background">@drawable/game_tv_8</item>
    </style>
    <style name="game_tv_16" parent="game_tv_0">
        <item name="android:textColor">@color/num_color</item>
        <item name="android:background">@drawable/game_tv_16</item>
    </style>
    <style name="game_tv_32" parent="game_tv_0">
        <item name="android:textColor">@color/num_color</item>
        <item name="android:background">@drawable/game_tv_32</item>
    </style>
    <style name="game_tv_64" parent="game_tv_0">
        <item name="android:textColor">@color/num_color</item>
        <item name="android:background">@drawable/game_tv_64</item>
    </style>
    <style name="game_tv_128" parent="game_tv_0">
        <item name="android:textColor">@color/num_color</item>
        <item name="android:background">@drawable/game_tv_128</item>
    </style>
    <style name="game_tv_256" parent="game_tv_0">
        <item name="android:textColor">@color/num_color</item>
        <item name="android:background">@drawable/game_tv_256</item>
    </style>
    <style name="game_tv_512" parent="game_tv_0">
        <item name="android:textColor">@color/num_color</item>
        <item name="android:background">@drawable/game_tv_512</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">@drawable/game_tv_32</item>
    </style>
</resources>