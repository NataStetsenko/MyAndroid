<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/calc_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalcActivity">
    <TextView
        android:id="@+id/tv_calc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/mountains_of_christmas"
        android:text="@string/app_btn_calc"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/calc_result_text"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/tv_exp"
        android:layout_below="@id/tv_calc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:textAlignment="textEnd"
        android:textColor="@color/calc_expression_text"
        android:textSize="18sp"
        android:textColorHint="@color/colorAccent" />
    <TextView
        android:id="@+id/tv_res"
        android:layout_below="@id/tv_exp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:textColor="@color/calc_result_text"
        android:textSize="34sp"
        android:textAlignment="textEnd"
        android:text="0"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_res"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/calc_btn_percent"
                style="@style/calc_btn_func"
                android:text="@string/calc_btn_percent" />
            <Button
                android:id="@+id/calc_btn_ce"
                style="@style/calc_btn_func"
                android:text="@string/calc_btn_ce" />
            <Button
                android:id="@+id/calc_btn_c"
                style="@style/calc_btn_func"
                android:text="@string/calc_btn_c" />
            <Button
                android:id="@+id/calc_btn_bs"
                style="@style/calc_btn_func"
                android:text="@string/calc_btn_bs" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/calc_btn_inv"
                style="@style/calc_btn_func"
                android:text="@string/calc_btn_inv" />
            <Button
                android:id="@+id/calc_btn_sqv"
                style="@style/calc_btn_func"
                android:text="@string/calc_btn_sqv" />
            <Button
                android:id="@+id/calc_btn_sqrt"
                style="@style/calc_btn_func"
                android:text="@string/calc_btn_sqrt" />
            <Button
                android:id="@+id/calc_btn_div"
                style="@style/calc_btn_func"
                android:text="@string/calc_btn_div" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/calc_btn_7"
                style="@style/calc_btn_func"
                android:background="@drawable/calc_btn_digit"
                android:text="@string/calc_btn_7" />
            <Button
                android:id="@+id/calc_btn_8"
                style="@style/calc_btn_func"
                android:background="@drawable/calc_btn_digit"
                android:text="@string/calc_btn_8" />
            <Button
                android:id="@+id/calc_btn_9"
                style="@style/calc_btn_func"
                android:background="@drawable/calc_btn_digit"
                android:text="@string/calc_btn_9" />
            <Button
                android:id="@+id/calc_btn_multi"
                style="@style/calc_btn_func"
                android:text="@string/calc_btn_multi" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/calc_btn_4"
                style="@style/calc_btn_func"
                android:background="@drawable/calc_btn_digit"
                android:text="@string/calc_btn_4" />
            <Button
                android:id="@+id/calc_btn_5"
                style="@style/calc_btn_func"
                android:background="@drawable/calc_btn_digit"
                android:text="@string/calc_btn_5" />
            <Button
                android:id="@+id/calc_btn_6"
                style="@style/calc_btn_func"
                android:background="@drawable/calc_btn_digit"
                android:text="@string/calc_btn_6" />
            <Button
                android:id="@+id/calc_btn_min"
                style="@style/calc_btn_func"
                android:text="@string/calc_btn_min" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/calc_btn_1"
                style="@style/calc_btn_func"
                android:background="@drawable/calc_btn_digit"
                android:text="@string/calc_btn_1" />
            <Button
                android:id="@+id/calc_btn_2"
                style="@style/calc_btn_func"
                android:background="@drawable/calc_btn_digit"
                android:text="@string/calc_btn_2" />
            <Button
                android:id="@+id/calc_btn_3"
                style="@style/calc_btn_func"
                android:background="@drawable/calc_btn_digit"
                android:text="@string/calc_btn_3" />
            <Button
                android:id="@+id/calc_btn_plus"
                style="@style/calc_btn_func"
                android:text="@string/calc_btn_plus" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/calc_btn_plus_min"
                style="@style/calc_btn_func"
                android:background="@drawable/calc_btn_digit"
                android:text="@string/calc_btn_plus_min" />
            <Button
                android:id="@+id/calc_btn_0"
                style="@style/calc_btn_func"
                android:background="@drawable/calc_btn_digit"
                android:text="@string/calc_btn_0" />
            <Button
                android:id="@+id/calc_btn_comma"
                style="@style/calc_btn_func"
                android:background="@drawable/calc_btn_digit"
                android:text="@string/calc_btn_comma" />
            <Button
                android:id="@+id/calc_btn_equals"
                style="@style/calc_btn_func"
                android:background="@color/calc_btn_equal_background"
                android:text="@string/calc_btn_equals" />
        </TableRow>
    </TableLayout>
</RelativeLayout>